@{
    ViewData["Title"] = "Associados";
}
<div class="text-center">
   
    <h1 class="display-4">Cadastrar associado</h1>>

</div>

<form>    
    <div class="form-group">
        <label for="nome">Nome(Apelido)</label>
        <input type="text" class="form-control" placeholder="Digite o nome">
    </div>
    <div class="form-group">
        <label for="posicao">Posição</label>
        <input type="text" class="form-control" placeholder="Digite a posição">
    </div>
    <div class="form-group">
        <label for="celular">Celular</label>
        <input type="number" class="form-control" placeholder="Digite o celular">
    </div>
   
    <button type="submit" class="btn btn-primary">Adicionar</button>
    <a class="btn btn-secondary" asp-controller="Associados" asp-action="Index" role="button">Voltar</a>
</form>
